{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"args": {
			"WORKSPACE": "/workspaces/${localWorkspaceFolderBasename}"
		}
	},
	"onCreateCommand": "chmod -R a+rwx ${containerWorkspaceFolder}",
	"postCreateCommand": "sudo bash .devcontainer/postCreateCommand.sh",
	"runArgs": [
		"--shm-size=1g",
		"--network",
		"host",
		"--memory=62gb"
	],
	"updateRemoteUserUID": false,

	// Uncomment the following line to connect as root if needed.
	"remoteUser": "vscode"
}