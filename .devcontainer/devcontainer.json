{
	"name": "Ubuntu",
	"build": {
	  "dockerfile": "Dockerfile",
	  "context": "."
	},
	"onCreateCommand": "chown -R vscode:vscode ${containerWorkspaceFolder} && git config --global --add safe.directory ${containerWorkspaceFolder}",
	"postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
	"runArgs": [
		"--shm-size=1g",
		"--network",
		"host",
		"--memory=62gb"
	],
	"updateRemoteUserUID": false,

	// Uncomment the following line to connect as root if needed.
	"remoteUser": "vscode"
}